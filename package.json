{
  "name": "node-graceful",
  "version": "3.0.1",
  "description": "Graceful process exit manager. allows waiting on multiple async services.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrbar42/node-graceful.git"
  },
  "keywords": [
    "graceful",
    "exit",
    "signal",
    "sigterm",
    "SIGINT",
    "SIGHUP",
    "shutdown",
    "graceful exit",
    "uncaught",
    "uncaughtException",
    "unhandledRejection",
    "terminate",
    "stop",
    "process"
  ],
  "scripts": {
    "test:unit": "node tests/runner",
    "test:unit-ts": "ts-node tests/wait-for-multiple-promise.ts",
    "test:lint": "tsc --noEmit && tslint -c tslint.json --fix tests/*.ts",
    "test": "npm run test:lint && npm run test:unit && npm run test:unit-ts",
    "build": "tsc --build tsconfig.json",
    "prepublishOnly": "npm run build && npm run test"
  },
  "files": [
    "index.ts",
    "index.d.ts",
    "index.js",
    "README.md"
  ],
  "author": "mrbar42",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.6.1",
    "ts-node": "^10.2.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  }
}
